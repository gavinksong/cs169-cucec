<div id="wrapper">
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div>
                <br>
                <p>Mentors available for chat: <%=Mentor.num_mentors_available_chat%></p>
            </div>
            <div class="row">
                <div class="col-lg-12">
    
                    <!-- Student Navigation Tabs -->
                    <div class="row animatedParent">

                        <a class="col-xs-6 col-sm-4 col-md-4" href=<%= students_listen_path %>>
                            <div class="service-box row lesson-link purple">
                                <div class="lesson-icon col-sm-5">
                                    <span class="glyphicon glyphicon-headphones" aria-hidden="true"/>
                                </div>
                                <div class="service-desc col-sm-7">
                                    <h5>Listen</h5>
                                    <p>
                                        Listen to English recordings.
                                    </p>
                                </div>
                            </div>
                        </a>

                        <a class="col-xs-6 col-sm-4 col-md-4" href=<%= students_speak_path %>>
                            <div class="service-box row lesson-link yellow">
                                <div class="lesson-icon col-sm-5">
                                    <span class="glyphicon glyphicon-volume-down" aria-hidden="true"/>
                                </div>
                                <div class="service-desc col-sm-7">
                                    <h5>Speak</h5>
                                    <p>
                                        Improve your speaking skills.
                                    </p>
                                </div>
                            </div>
                        </a>

                        <a class="col-xs-6 col-sm-4 col-md-4" href=<%= students_read_path %>>
                            <div class="service-box row lesson-link red">
                                <div class="lesson-icon col-sm-5">
                                    <span class="glyphicon glyphicon-font" aria-hidden="true"/>
                                </div>
                                <div class="service-desc col-sm-7">
                                    <h5>Read</h5>
                                    <p>
                                        Compare English and Chinese texts.
                                    </p>
                                </div>
                            </div>
                        </a>
                        
                        <a class="col-xs-6 col-sm-4 col-md-4" href=<%= students_write_path %>>
                            <div class="service-box row lesson-link orange">
                                <div class="lesson-icon col-sm-5">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"/>
                                </div>
                                <div class="service-desc col-sm-7">
                                    <h5>Write</h5>
                                    <p>
                                        Practice your English writing skills.
                                    </p>
                                </div>
                            </div>
                        </a>
                        
                        <a class="col-xs-6 col-sm-4 col-md-4" href=<%= students_watch_path %>>
                            <div class="service-box row lesson-link blue">
                                <div class="lesson-icon col-sm-5">
                                    <span class="glyphicon glyphicon-facetime-video" aria-hidden="true"/>
                                </div>
                                <div class="service-desc col-sm-7">
                                    <h5>Watch</h5>
                                    <p>
                                        Watch English movies and videos.
                                    </p>
                                </div>
                            </div>
                        </a>
                        
                        <%= link_to conversations_path, class: "col-xs-6 col-sm-4 col-md-4" do %>
                            <div class="service-box row lesson-link green">
                                <div class="lesson-icon col-sm-5">
                                    <span class="glyphicon glyphicon-comment" aria-hidden="true"/>
                                </div>
                                <div class="service-desc col-sm-7">
                                    <h5>Chat</h5>
                                    <p>
                                        Talk to an American mentor through
                                        instant messaging.
                                    </p>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>
