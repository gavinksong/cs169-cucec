<%= render 'navigation/nav.html.erb' %>
<div id="wrapper">
  <!-- Mentor Sign In or Sign Out -->
  <div>
    <% if mentor_signed_in? %>
      <%= link_to('Logout', destroy_mentor_session_path, :method => :delete) %>
    <% end %>
  </div>
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">

                    <!-- Student Navigation Tabs -->
                    <div class="row animatedParent">

                        <div class="col-xs-6 col-sm-4 col-md-4">
                            <div class="service-box">
                                <div class="service-desc">
                                    <h5>Voice Call</h5>
                                    <p>
                                        Mentor a student through voice call.
                                    </p>
                                    <a href="#"  class="btn btn-default">Listen</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-6 col-sm-4 col-md-4">
                            <div class="service-box">
                                <div class="service-desc">
                                    <h5>Chat</h5>
                                    <p>
                                        Mentor a student through instant message.
                                    </p>
                                    <a href="#"  class="btn btn-default">Speak</a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- End of Navigation tabs-->
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>
